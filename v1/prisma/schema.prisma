// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

// Main schedule data storage - single record for all data
model ScheduleData {
  id        String   @id @default("main")
  events    String   @default("[]")      // JSON string of events
  personnel String   @default("[]")      // JSON string of personnel statuses
  projects  String   @default("[]")      // JSON string of projects
  settings  String   @default("{}")      // JSON string of settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
